        <!--android:id="@+id/btnAnother"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_width="500dp"-->
        <!--android:layout_marginLeft="350dp"-->
        <!--android:text="อื่นๆ"-->
       <!-- -->
        <!--android:gravity="center"/>-->

</RelativeLayout>