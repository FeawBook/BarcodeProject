<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cardView"
    android:layout_width="1300dp"
    android:layout_height="300dp"
    android:layout_margin="2dp"
    android:background="#1565C0"
    android:saveEnabled="true"
    card_view:cardBackgroundColor="#1565C0"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="10dp">


    <RelativeLayout
        android:id="@+id/card_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1565C0">


        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/radian"
            android:elevation="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/power_utah" />


        <TextView
            android:id="@+id/nameEmployee"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbnail"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="โปรดติดต่อแผนกเทคโนโลยีสารสนเทศ"
            android:textColor="#CDDC39"
            android:textSize="14px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@+id/thumbnail"
            android:gravity="center"
            android:maxLines="3"
            android:padding="8dp"
            android:text=""
            android:textColor="#FF8A80"
            android:textSize="18px" />

        <TextView
            android:id="@+id/batch"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/title"
            android:maxLines="3"
            android:padding="8dp"
            android:text="batch"
            android:textColor="#FF8A80"
            android:textSize="18px" />

        <ImageButton
            android:id="@+id/like"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="75dp"
            android:layout_toRightOf="@+id/batch"
            android:background="@drawable/list_selector"
            android:maxLines="3"
            android:scaleType="centerCrop"
            android:src="@drawable/like_icon_gold" />


        <ImageButton
            android:id="@+id/dislike"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="75dp"
            android:layout_toRightOf="@+id/like"
            android:background="@drawable/list_selector"
            android:maxLines="3"
            android:scaleType="centerCrop"
            android:src="@drawable/dislike1" />


        <ImageButton
            android:id="@+id/btnTransfer"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="75dp"
            android:layout_toRightOf="@+id/dislike"
            android:background="@drawable/list_selector"
            android:maxLines="3"
            android:scaleType="centerCrop"
            android:src="@drawable/transferto"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/textLike"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/like"
            android:layout_marginLeft="545dp"
            android:layout_marginTop="65dp"
            android:freezesText="true"
            android:gravity="center"
            android:saveEnabled="true"
            android:text="000"
            android:textColor="#64DD17"
            android:textSize="24dp"
            android:visibility="visible" />


        <TextView
            android:id="@+id/textDislike"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dislike"
            android:layout_marginLeft="705dp"
            android:layout_marginTop="65dp"
            android:gravity="center"
            android:text="000"
            android:textColor="#D50000"
            android:textSize="24px" />

    </RelativeLayout>


</android.support.v7.widget.CardView>