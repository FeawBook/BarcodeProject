<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="barcoode_project.example.thanathip.barcode_project.SecondActivity"
    android:background="#BDBDBD">





    <TextView
        android:layout_width="245dp"
        android:layout_height="60dp"
        android:id="@+id/txtShow"
        android:cursorVisible="false"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="75dp"
        android:phoneNumber="true"
        android:numeric="integer"
        android:background="@drawable/myrect"
        android:textColor="#212121"
        android:textAppearance="@style/AlertDialog.AppCompat.Light"
        android:textSize="36px"
        />

    <TextView
        android:id="@+id/beforeTran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="36px"
        android:textColor="#212121"
        android:text="จำนวนของเสีย"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        />

    <ListView
        android:id="@+id/list_deliver"
        android:layout_height="wrap_content"
        android:layout_width="500dp"
        android:layout_toRightOf="@+id/deliver_grid"
        android:layout_marginTop="250dp"
        android:background="@drawable/myrect"
        android:layout_marginLeft="300dp"
        android:choiceMode="singleChoice">
    </ListView>
    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/deliver_grid"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:columnWidth="80dp"
        android:numColumns="3"
        android:verticalSpacing="1dp"
        android:horizontalSpacing="1dp"
        android:stretchMode="none"
        android:gravity="center"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/list_selector"
        />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:textColor="#FFFF"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="450dp"
        android:text="ออกจากการโอน"
        android:background="@drawable/select_press_red"
        />

</RelativeLayout>
