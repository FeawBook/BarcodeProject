<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SecondTran">

    <TextView
        android:id="@+id/edtNumber"
        android:layout_width="245dp"
        android:layout_height="70dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="75dp"
        android:layout_toRightOf="@+id/imgEmployee"
        android:background="@drawable/myrect"
        android:cursorVisible="false"
        android:numeric="integer"
        android:phoneNumber="true"
        android:textAppearance="@style/AlertDialog.AppCompat.Light"
        android:textColor="#BBDEFB"
        android:textSize="24px"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/unitTran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="850dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/myrect"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFF"
        android:textSize="48px"

        />

    <TextView
        android:id="@+id/beforeTran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="350dp"
        android:text="xxx"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFF"
        android:textSize="18px"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/numTran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="850dp"
        android:text="0"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/picNameFollow"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginLeft="800dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/power_utah"
        android:visibility="invisible" />

    <Button
        android:id="@+id/nameFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="810dp"
        android:layout_marginTop="400dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#000"
        android:textSize="24px"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/list_of_name_follow"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_below="@+id/picNameFollow"
        android:layout_toEndOf="@+id/beforeTran"
        android:layout_toRightOf="@+id/beforeTran" />

    <TextView
        android:id="@+id/how_much"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/imgEmployee"
        android:text="จำนวนที่ต้องการโอน(ลูก)"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFF"
        android:textSize="21px"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/hideFollowerID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="820dp"
        android:layout_marginTop="600dp"
        android:text="hint data form follower"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/list_transfer"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/myrect"
        android:choiceMode="singleChoice"></ListView>
    -

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/transfer_grid"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nameFollow"
        android:layout_alignLeft="@+id/edtNumber"
        android:layout_alignStart="@+id/edtNumber"
        android:layout_marginTop="160dp"
        android:background="@drawable/list_selector"
        android:columnWidth="80dp"
        android:gravity="center"
        android:horizontalSpacing="1dp"
        android:numColumns="3"
        android:stretchMode="none"
        android:verticalSpacing="1dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/select_press_red"
        android:text="ออกจากการโอน"
        android:textColor="#FFFF"

        />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginLeft="650dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/selector_change_color"
        android:text="ตกลง"
        android:textColor="#FFFF"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgEmployee"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/noimage"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtNameShow"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/myrect"
        android:gravity="center"
        android:text=""
        android:textColor="#FFFF"
        android:textSize="18px"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtNameList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="โปรดเลือกรายชื่อ"
        android:textColor="#FFFF"
        android:textSize="24px" />

    <Button
        android:id="@+id/palace"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/select_orange_press"
        android:text="โอน 1 พาเหรด"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtUnitInWorkTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="400dp"
        android:text="Book"
        android:textSize="14dp"
        android:textStyle="bold"
        android:visibility="invisible" />

</RelativeLayout>
